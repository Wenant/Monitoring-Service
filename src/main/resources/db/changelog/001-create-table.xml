<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="001-create-table" author="wenant">

        <createTable schemaName="ylab_hw" tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                <!-- Уникальный идентификатор пользователя -->
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <!-- Имя пользователя -->
            <column name="password" type="VARCHAR(255)"/>
            <!-- Пароль пользователя -->
            <column name="role" type="VARCHAR(255)"/>
            <!-- Роль пользователя -->
        </createTable>

        <createTable schemaName="ylab_hw" tableName="meter_type_catalog">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                <!-- Уникальный идентификатор типа счетчика -->
            </column>
            <column name="type" type="VARCHAR(255)"/>
            <!-- Тип счетчика -->
        </createTable>

        <createTable schemaName="ylab_hw" tableName="meter_readings">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
                <!-- Уникальный идентификатор показания счетчика -->
            </column>
            <column name="user_id" type="INTEGER">
                <constraints references="ylab_hw.users(id)" foreignKeyName="fk_meter_reading_user"/>
                <!-- Ссылка на пользователя, к которому относится показание -->
            </column>
            <column name="value" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
                <!-- Значение показания счетчика -->
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
                <!-- Дата показания счетчика -->
            </column>
            <column name="meter_type_id" type="INTEGER">
                <constraints references="ylab_hw.meter_type_catalog(id)"
                             foreignKeyName="fk_meter_reading_meter_type_catalog"/>
                <!-- Ссылка на тип счетчика, к которому относится показание -->
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>